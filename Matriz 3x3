#include <iostream>
using namespace std;

int main()
{
	int filas;
	int columnas;
	int matriz[5][5];
	
	cout << "Digite el numero de filas: ";
	cin >> filas;
	cout << "Digite el numero de columnas: ";
	cin >> columnas ;
	cout<< endl << endl;
	
	for(int i = 0; i < filas; i++)
	{
		cout << endl;
		for (int j = 0; j < columnas; j++)
		{
			cout << "Ingrese un valor en la posicion [" <<i<<"]" << "["<<j<<"]: ";
			cin >>matriz[i][j];
		}
	}
	
	cout << "\nLa matriz es: " <<endl;
	
	for(int i = 0; i < filas; i++)
	{
		cout << endl;
		for(int j =0; j < columnas; j++)
		{
			cout <<" " << matriz[i][j];
		}
	}
	cout << endl;
	system("pause");
	return 0;
}